<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="top">
        <Button
            android:id="@+id/gopersonaldata"
            android:onClick="gostats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="назад"/>

        <ImageButton
            android:id="@+id/help"
            android:onClick="showhelp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="80dp"
            android:background="@color/fon"
            android:layout_gravity="center"
            android:src="@android:drawable/ic_menu_help"/>



    </LinearLayout>
        <LinearLayout
            android:id="@+id/filterpanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|end"
            android:visibility="invisible"
            android:layout_margin="5dp"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/search"
                android:layout_width="0dp"
                android:layout_weight="20"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="поиск"/>

            <ImageButton
                android:id="@+id/gosearch"
                android:onClick="search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/fon"
                android:src="@android:drawable/ic_menu_search"/>



            <Spinner
                android:id="@+id/catselector"
                android:layout_width="0dp"
                android:layout_weight="30"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"/>


            <ImageButton
                android:id="@+id/editcats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/fon"
                android:layout_margin="5dp"
                android:src="@android:drawable/ic_menu_edit"/>



        </LinearLayout>

        <ListView
            android:id="@+id/wordslist"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="79dp">
        <Button
            android:id="@+id/verbs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Глаголы"/>
        <Button
            android:id="@+id/nouns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Сущ"/>
        <Button
            android:id="@+id/words"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Другие"/>

        <Button
            android:id="@+id/addnewword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="gotoaddword"
            android:layout_margin="5dp"
            android:text="+" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>