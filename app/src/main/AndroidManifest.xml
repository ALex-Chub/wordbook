<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alexch.newwordlearn">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Мой Словарик"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"

        android:theme="@style/Theme.NewWordLearn">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"  android:screenOrientation="portrait"/>

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".LearWords" android:screenOrientation="portrait"/>

        <activity android:name=".AddWord"  android:screenOrientation="portrait"/>

        <activity android:name=".LibraryWords"  android:screenOrientation="portrait"/>

        <activity android:name=".PersonalStats"  android:screenOrientation="portrait"/>
        <activity android:name=".HardLearWords"  android:screenOrientation="portrait"/>

    </application>

</manifest>